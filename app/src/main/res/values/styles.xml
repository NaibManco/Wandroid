<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">?android:attr/windowBackground</item>
        <item name="toolbarNavigationButtonStyle">@style/ToolbarNavigationButtonStyle</item>
    </style>

    <style name="WanToolBar" parent="@android:style/Widget.Material.Toolbar">
        <item name="android:contentInsetLeft">0dp</item>
    </style>

    <style name="ToolbarNavigationButtonStyle" parent="Widget.AppCompat.Toolbar.Button.Navigation">
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">50dp</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyBottomNavigationStyle" parent="Widget.Design.BottomNavigationView">
        <item name="colorPrimary">@android:color/holo_blue_dark</item>
    </style>

    <style name="style_circle_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black_22</item>
        <item name="android:textColorHint">@color/gray_cccccc</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">@dimen/dp_10</item>
        <item name="android:layout_marginStart">@dimen/dp_64</item>
        <item name="android:layout_marginEnd">@dimen/dp_64</item>
    </style>

    <style name="style_circle_btn" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp_48</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_marginStart">@dimen/dp_64</item>
        <item name="android:layout_marginEnd">@dimen/dp_64</item>
    </style>

    <style name="WanButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/sp_18</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="WanButton.Theme">
        <item name="android:elevation">@dimen/dp_2</item>
        <item name="android:background">@drawable/bg_accent_button</item>
    </style>

    <style name="WanButton.Common">
        <item name="android:elevation">@dimen/dp_2</item>
        <item name="android:background">@drawable/bg_common_button</item>
    </style>
</resources>
