<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_300"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/dp_20"
    android:background="@drawable/bg_collect_item"
    android:orientation="vertical"
    android:padding="@dimen/dp_10">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_10">

        <TextView
            style="@style/WanText.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="2"
            android:text="@string/profile_measure_helper"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/collect_article_title"
            style="@style/WanText.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="2" />
    </FrameLayout>

    <TextView
        android:id="@+id/collect_article_desc"
        style="@style/WanText.Desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black_40"
        android:textSize="@dimen/sp_12" />
</LinearLayout>