<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_recycler_item"
    android:padding="@dimen/dp_16">

    <com.naib.wandroid.base.widget.SideLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/home_article_item_title"
            style="@style/WanText.Title"
            android:layout_width="match_parent"
            android:maxLines="3"
            android:paddingRight="@dimen/dp_12" />

        <ImageView
            android:id="@+id/home_article_item_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_like" />
    </com.naib.wandroid.base.widget.SideLinearLayout>

    <com.naib.wandroid.base.widget.SideLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_16">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_article_item_author"
                style="@style/WanText.Content" />

            <TextView
                android:id="@+id/home_article_item_category"
                style="@style/WanText.Content" />

        </LinearLayout>

        <TextView
            android:id="@+id/home_article_item_time"
            style="@style/WanText.Content" />
    </com.naib.wandroid.base.widget.SideLinearLayout>

</LinearLayout>

