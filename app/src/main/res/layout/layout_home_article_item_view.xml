<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_recycler_item"
    android:orientation="vertical"
    android:padding="@dimen/dp_16">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/dp_12"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/home_article_item_author"
            style="@style/WanText.Info"
            android:textColor="@color/black_70"
            android:layout_marginRight="@dimen/dp_8" />

        <TextView
            android:id="@+id/article_label_new"
            style="@style/WanText.Info"
            android:layout_marginRight="@dimen/dp_4"
            android:background="@drawable/bg_label_new"
            android:paddingLeft="@dimen/dp_3"
            android:paddingRight="@dimen/dp_3"
            android:paddingTop="@dimen/dp_1"
            android:paddingBottom="@dimen/dp_1"
            android:text="@string/article_new"
            android:textColor="@color/colorPrimary_50"
            android:textSize="@dimen/sp_10"
            android:visibility="gone" />

        <TextView
            android:id="@+id/article_label_top"
            style="@style/WanText.Info"
            android:background="@drawable/bg_label_top"
            android:paddingLeft="@dimen/dp_3"
            android:paddingRight="@dimen/dp_3"
            android:paddingTop="@dimen/dp_1"
            android:paddingBottom="@dimen/dp_1"
            android:text="@string/article_top"
            android:textColor="@color/color_like"
            android:textSize="@dimen/sp_10"
            android:visibility="gone" />
    </LinearLayout>

    <com.naib.wandroid.base.widget.SideLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/home_article_item_title"
            style="@style/WanText.Title"
            android:layout_width="match_parent"
            android:maxLines="3"
            android:paddingRight="@dimen/dp_12" />

        <ImageView
            android:id="@+id/home_article_item_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:foreground="@drawable/bg_circle_ripple"
            android:clickable="true"
            android:src="@drawable/ic_like" />
    </com.naib.wandroid.base.widget.SideLinearLayout>

    <com.naib.wandroid.base.widget.SideLinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_12">

        <TextView
            android:id="@+id/home_article_item_category"
            style="@style/WanText.Info" />

        <TextView
            android:id="@+id/home_article_item_time"
            style="@style/WanText.Info" />
    </com.naib.wandroid.base.widget.SideLinearLayout>

</LinearLayout>

